<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.sunchin.shop.admin.pojo.ScCommentRelation" table="SC_COMMENTS_RELATION">
        <id name="id" type="java.lang.String">
            <column name="ID" length="36" />
            <generator class="assigned"></generator>
        </id>
        <property name="type" type="java.lang.String">
            <column name="TYPE" length="1">
                <comment>类型</comment>
            </column>
        </property>
        <property name="refId" type="java.lang.String">
            <column name="REF_ID" length="36">
                <comment>商品id/订单id</comment>
            </column>
        </property>
        <property name="goodsId" type="java.lang.String">
            <column name="GOODS_ID" length="36">
                <comment>商品子表id</comment>
            </column>
        </property>
        <property name="commentsId" type="java.lang.String">
            <column name="COMMENTS_ID" length="36">
                <comment>评论id</comment>
            </column>
        </property>
        <property name="createTime" type="java.util.Date">
            <column name="CREATE_TIME" length="7">
                <comment>创建时间</comment>
            </column>
        </property>
        <property name="createUserId" type="java.lang.String">
            <column name="CREATE_USER_ID" length="36">
                <comment>创建人</comment>
            </column>
        </property>
        <property name="flag" type="java.lang.String">
            <column name="FLAG" length="1">
                <comment>是否有效</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
