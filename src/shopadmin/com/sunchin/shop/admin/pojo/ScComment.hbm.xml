<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.sunchin.shop.admin.pojo.ScComment" table="SC_COMMENT">
        <id name="id" type="java.lang.String">
            <column name="ID" length="36" />
            <generator class="assigned"></generator>
        </id>
        <property name="type" type="java.lang.String">
            <column name="TYPE" length="1">
                <comment>评论或者追评</comment>
            </column>
        </property>
        <property name="content" type="java.lang.String">
            <column name="CONTENT" length="500">
                <comment>评论内容</comment>
            </column>
        </property>
        <property name="contentTime" type="java.util.Date">
            <column name="CONTENT_TIME" length="7">
                <comment>评论时间</comment>
            </column>
        </property>
        <property name="score" type="java.lang.Double">
            <column name="SCORE" precision="2" scale="0">
                <comment>评分</comment>
            </column>
        </property>
        <property name="ishidden" type="java.lang.String">
            <column name="ISHIDDEN" length="1">
                <comment>1匿名 0不匿名 默认不匿名</comment>
            </column>
        </property>
        <property name="parentId" type="java.lang.String">
            <column name="PARENT_ID" length="36">
                <comment>父评论id</comment>
            </column>
        </property>
        <property name="contentPeople" type="java.lang.String">
            <column name="CONTENT_PEOPLE" length="36">
                <comment>评论人id</comment>
            </column>
        </property>
        <property name="flag" type="java.lang.String">
            <column name="FLAG" length="1">
                <comment>数据有效性</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
