<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.sunchin.shop.admin.pojo.ScDirStruct" table="SC_DIR_STRUCT" >
        <id name="id" type="java.lang.String">
            <column name="ID" length="36" />
            <generator class="assigned"></generator>
        </id>
        <property name="dirName" type="java.lang.String">
             <column name="DIR_NAME" length="50">
                <comment>栏目名称</comment>
            </column>
        </property>
        <property name="parentDirId" type="java.lang.String">
             <column name="PARENT_DIR_ID" length="36">
                <comment>上级栏目</comment>
            </column>
        </property>
        <property name="order" type="java.lang.Double">
             <column name="ORDER_" >
                <comment>顺序</comment>
            </column>
        </property>
        <property name="level" type="java.lang.String">
            <column name="LEVEL_" length="1">
                <comment>所属级别/0根节点，1一级类别，2二级类别，3三级类别</comment>
            </column>
        </property>
         <property name="dirPath" type="java.lang.String">
            <column name="DIR_PATH" length="200">
                <comment>栏目路径</comment>
            </column>
        </property>
        <property name="isuse" type="java.lang.String">
            <column name="ISUSE" length="1">
                <comment>是否启用/默认1，1启用，0关闭</comment>
            </column>
        </property>
      <property name="createTime" type="java.util.Date">
               <column name="CREATE_TIME">
                <comment>创建时间</comment>
            </column>
        </property>
         <property name="updateTime" type="java.util.Date">
               <column name="UPDATE_TIME">
                <comment>修改时间</comment>
            </column>
        </property>
         <property name="flag" type="java.lang.String">
               <column name="FLAG" length="1">
                <comment>数据有效性/默认0，0有效，1无效</comment>
            </column>
        </property>
        <property name="belong" type="java.lang.String">
               <column name="BELONG" length="50">
                <comment>所属</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
