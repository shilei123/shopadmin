<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.sunchin.shop.admin.pojo.ScGrade" table="SC_GRADE" >
        <id name="id" type="java.lang.String">
            <column name="ID" length="36" />
            <generator class="assigned"></generator>
        </id>
         <property name="userGrade" type="java.lang.String">
             <column name="USER_GRADE" length="1">
                <comment>会员等级</comment>
            </column>
        </property>
         <property name="needIntegral" type="java.lang.Double">
             <column name="NEED_INTEGRAL">
                <comment>所需积分</comment>
            </column>
        </property>
         <property name="isuse" type="java.lang.String">
             <column name="ISUSE" length="1">
                <comment>是否启用/默认1，1启用，0不启用</comment>
            </column>
        </property>
          <property name="createTime" type="java.util.Date">
               <column name="CREATE_TIME">
                <comment>创建时间</comment>
            </column>
        </property>
         <property name="updateTime" type="java.util.Date">
               <column name="UPDATE_TIME">
                <comment>修改时间</comment>
            </column>
        </property>
        <property name="remark" type="java.lang.String">
               <column name="REMARK" length="50">
                <comment>备注</comment>
            </column>
        </property>
         <property name="flag" type="java.lang.String">
               <column name="FLAG" length="1">
                <comment>数据有效性/默认0，0有效，1无效</comment>
            </column>
        </property>
         <property name="belong" type="java.lang.String">
               <column name="BELONG" length="50">
                <comment>所属</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
