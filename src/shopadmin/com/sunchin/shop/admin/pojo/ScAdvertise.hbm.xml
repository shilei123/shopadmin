<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.sunchin.shop.admin.pojo.ScAdvertise" table="SC_ADVERTISE" >
        <id name="id" type="java.lang.String">
            <column name="ID" length="36" />
            <generator class="assigned"></generator>
        </id>
        <property name="name" type="java.lang.String">
             <column name="NAME" length="50">
                <comment>名称</comment>
            </column>
        </property>
        <property name="memo" type="java.lang.String">
             <column name="MEMO" length="100">
                <comment>介绍/说明</comment>
            </column>
        </property>
        <property name="linkkind" type="java.lang.String">
            <column name="LINKKIND" length="50">
                <comment>广告类型</comment>
            </column>
        </property>
        <property name="imglink" type="java.lang.String">
            <column name="IMGLINK" length="50">
                <comment>商品ID/活动ID/url</comment>
            </column>
        </property>
        <property name="ordernumb" type="java.lang.String">
            <column name="ORDERNUMB" length="50">
                <comment>显示顺序</comment>
            </column>
        </property>
        <property name="type" type="java.lang.String">
             <column name="TYPE" length="50">
                <comment>广告位置</comment>
            </column>
        </property>
        <property name="isuse" type="java.lang.String">
               <column name="ISUSE" length="1" >
                <comment>是否启用/默认0，0启用，1不启用</comment>
            </column>
        </property>
        <property name="kind" type="java.lang.String">
               <column name="KIND" length="36" >
                <comment>类型</comment>
            </column>
        </property>
         <property name="startTime" type="java.util.Date">
               <column name="START_TIME">
                <comment>广告开始时间</comment>
            </column>
        </property>
         <property name="endTime" type="java.util.Date">
               <column name="END_TIME">
                <comment>广告结束时间</comment>
            </column>
        </property>
         <property name="createTime" type="java.util.Date">
               <column name="CREATE_TIME">
                <comment>创建时间</comment>
            </column>
        </property>
         <property name="updateTime" type="java.util.Date">
               <column name="UPDATE_TIME">
                <comment>修改时间</comment>
            </column>
        </property>
         <property name="flag" type="java.lang.String">
               <column name="FLAG" length="1">
                <comment>数据有效性/默认0，0有效，1无效</comment>
            </column>
        </property>
         <property name="belong" type="java.lang.String">
               <column name="BELONG" length="50">
                <comment>所属</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
