<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.sunchin.shop.admin.pojo.ScEvents" table="SC_EVENTS" >
        <id name="id" type="java.lang.String">
            <column name="ID" length="36" />
            <generator class="assigned"></generator>
        </id>
        <property name="name" type="java.lang.String">
             <column name="NAME" length="50">
                <comment>名称</comment>
            </column>
        </property>
        <property name="isuse" type="java.lang.String">
            <column name="ISUSE" length="1">
                <comment>有效标记/默认0，0有效，1无效</comment>
            </column>
        </property>
        <property name="memo" type="java.lang.String">
             <column name="MEMO" length="2000">
                <comment>活动介绍</comment>
            </column>
        </property>
        <property name="startTime" type="java.util.Date">
               <column name="START_TIME">
                <comment>活动开始时间</comment>
            </column>
        </property>
         <property name="endTime" type="java.util.Date">
               <column name="END_TIME">
                <comment>活动结束时间</comment>
            </column>
        </property>
         <property name="createTime" type="java.util.Date">
               <column name="CREATE_TIME">
                <comment>创建时间</comment>
            </column>
        </property>
         <property name="updateTime" type="java.util.Date">
               <column name="UPDATE_TIME">
                <comment>修改时间</comment>
            </column>
        </property>
         <property name="flag" type="java.lang.String">
               <column name="FLAG" length="1">
                <comment>数据有效性/默认0，0有效，1无效</comment>
            </column>
        </property>
        <property name="belong" type="java.lang.String">
               <column name="BELONG" length="50">
                <comment>所属</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
