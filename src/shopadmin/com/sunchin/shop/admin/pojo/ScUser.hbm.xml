<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.sunchin.shop.admin.pojo.ScUser" table="SC_USER" >
        <id name="id" type="java.lang.String">
            <column name="ID" length="36" />
            <generator class="assigned"></generator>
        </id>
        <property name="userName" type="java.lang.String">
             <column name="USER_NAME" length="50">
                <comment>用户名</comment>
            </column>
        </property>
        <property name="nickName" type="java.lang.String">
             <column name="NICK_NAME" length="50">
                <comment>昵称</comment>
            </column>
        </property>
        <property name="loginPwd" type="java.lang.String">
            <column name="LOGIN_PWD" length="36">
                <comment>登录密码</comment>
            </column>
        </property>
        <property name="payPwd" type="java.lang.String">
            <column name="PAY_PWD" length="36">
                <comment>支付密码</comment>
            </column>
        </property>
        <property name="userGrade" type="java.lang.String">
            <column name="USER_GRADE" precision="36">
                <comment>会员等级id</comment>
            </column>
        </property>
        <property name="tixianStatus" type="java.lang.String">
             <column name="TIXIAN_STATUS" precision="1">
                <comment>提现状态/0无 1申请中</comment>
            </column>
        </property>
        <property name="createTime" type="java.util.Date">
               <column name="CREATE_TIME" >
                <comment>注册时间</comment>
            </column>
        </property>
        <property name="optionTime" type="java.util.Date">
               <column name="OPTION_TIME" >
                <comment>修改时间</comment>
            </column>
        </property>
         <property name="userStatus" type="java.lang.String">
               <column name="USER_STATUS" length="1" >
                <comment>账户状态/0注销 1正常 2冻结</comment>
            </column>
        </property>
         <property name="flag" type="java.lang.String">
               <column name="FLAG" length="1" >
                <comment>是否有效/0 无效 1 有效</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
