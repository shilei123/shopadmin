<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.sunchin.shop.admin.pojo.ScUserCoupon" table="SC_USER_COUPON">
        <id name="id" type="java.lang.String">
            <column name="ID" length="36" />
            <generator class="assigned"></generator>
        </id>
        <property name="userId" type="java.lang.String">
            <column name="USER_ID" length="36">
                <comment>用户id</comment>
            </column>
        </property>
        <property name="couponId" type="java.lang.String">
            <column name="COUPON_ID" length="36">
                <comment>优惠券id</comment>
            </column>
        </property>
        <property name="couponName" type="java.lang.String">
            <column name="COUPON_NAME" length="100">
                <comment>优惠券名称</comment>
            </column>
        </property>
        <property name="couponBlance" type="java.lang.Double">
            <column name="COUPON_BLANCE" precision="10">
                <comment>优惠券金额</comment>
            </column>
        </property>
        <property name="couponXfBalance" type="java.lang.Double">
            <column name="COUPON_XF_BALANCE" precision="10">
                <comment>满足金额使用</comment>
            </column>
        </property>
        <property name="couponCreatdate" type="java.util.Date">
            <column name="COUPON_CREATDATE">
                <comment>优惠券发放时间</comment>
            </column>
        </property>
        <property name="couponExpirydate" type="java.util.Date">
            <column name="COUPON_EXPIRYDATE">
                <comment>有效期至</comment>
            </column>
        </property>
        <property name="orderSn" type="java.lang.String">
            <column name="ORDER_SN" length="36">
                <comment>使用订单号</comment>
            </column>
        </property>
        <property name="couponStatus" type="java.lang.String">
            <column name="COUPON_STATUS" length="1">
                <comment>优惠券状态</comment>
            </column>
        </property>
        <property name="optionTime" type="java.util.Date">
            <column name="OPTION_TIME">
                <comment>操作时间</comment>
            </column>
        </property>
        <property name="optionAdminid" type="java.lang.String">
            <column name="OPTION_ADMINID" length="36">
                <comment>系统操作人</comment>
            </column>
        </property>
        <property name="optionRemark" type="java.lang.String">
            <column name="OPTION_REMARK" length="100">
                <comment>操作备注</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
